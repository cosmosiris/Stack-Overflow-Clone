<article>
  <form class= "new_post_form" action="/posts/" method="post" >
    <button type="submit" name="submit_comment" value="submit">
    </button>
  <h2><a href='/posts/'<%= post.title %></a></h2>
  <p>
    <span class="points"><%= post.points %></span>
    <span class="username"><%= post.username %></span>
    <span class="timestamp"><%= post.time_since_creation %></span>
    <span class="comment_count"><%= post.comment_count %></span>
    <a class="delete" href='/posts/<%= post.id %>'</a>
  </p>
  </form>
</article>
